<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/background"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="45dp"
        android:background="@drawable/bar" >

        <ImageButton
            android:id="@+id/btnDelete"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_alignBottom="@android:id/tabs"
            android:layout_alignParentRight="true"
            android:layout_alignTop="@android:id/tabs"
            android:layout_marginRight="45dp"
            android:background="@drawable/top_bar_tab_3"
            android:src="@drawable/icon_garbage" />

        <RelativeLayout
            android:id="@+id/relativeProgress"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:gravity="center" >

            <RelativeLayout
                android:id="@+id/relativeCircle"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:background="@drawable/top_bar_tab_3"
                android:visibility="gone" >

                <ImageView
                    android:id="@+id/imageView1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:adjustViewBounds="true"
                    android:src="@drawable/loading_medium_logo" />

                <ImageView
                    android:id="@+id/imVLoading"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:adjustViewBounds="true"
                    android:src="@drawable/loading_medium_circle" />
            </RelativeLayout>

            <ImageButton
                android:id="@+id/btnResresh"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:layout_centerInParent="true"
                android:background="@drawable/top_bar_tab_3"
                android:src="@drawable/icon_refresh" />
        </RelativeLayout>

        <ImageButton
            android:id="@+id/btnBack"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_alignParentLeft="true"
            android:adjustViewBounds="true"
            android:background="@drawable/top_bar_tab_1"
            android:src="@drawable/icon_back" />

        <TextView
            android:id="@+id/txtTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/btnBack"
            android:text="@string/message"
            android:textColor="@android:color/white"
            android:textSize="16sp"
            android:textStyle="bold" />
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/txtAddresLinear"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/greymsg"
        android:orientation="horizontal"
        android:padding="10dp" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center" >

            <LinearLayout
                android:id="@+id/linear1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="left"
                android:orientation="vertical" >
            </LinearLayout>

            <LinearLayout
                android:id="@+id/linear2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="left"
                android:orientation="vertical" >
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <ListView
        android:id="@+id/listMessages"
        android:layout_width="fill_parent"
        android:layout_height="0dip"
        android:layout_weight="1"
        android:background="@android:color/white"
        android:cacheColorHint="@null"
        android:divider="@color/comment_separator"
        android:dividerHeight="1dip" />

    <EditText
        android:id="@+id/editTextReply"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/messages_to_bg"
        android:drawableLeft="@drawable/avatar"
        android:drawablePadding="5dp"
        android:ems="10"
        android:gravity="top"
        android:hint="@string/hint_reply"
        android:imeOptions="actionSend"
        android:inputType="text" >
    </EditText>

</LinearLayout>